{
  "name": "web",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "cross-env NODE_ENV='production' postcss static/style.css -o app/styles/app.css",
    "dev": "concurrently \"yarn watch:css\" \"remix dev\"",
    "start": "remix-serve build",
    "lint": "eslint \"app/**/*.{js,jsx,ts,tsx}\" --fix",
    "lint:nofix": "eslint \"app/**/*.{js,jsx,ts,tsx}\"",
    "watch:css": "cross-env NODE_ENV='production' postcss static/style.css -o app/styles/app.css --watch",
    "watch:css:dev": "cross-env NODE_ENV='development' postcss static/style.css -o app/styles/app.css --watch"
  },
  "dependencies": {
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ui-web": "*"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.2",
    "@tailwindcss/ui": "^0.7.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "config": "*",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.10",
    "eslint": "^8.16.0",
    "jest": "^28.1.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "tailwindcss": "^3.0.24",
    "tsconfig": "*",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=14"
  }
}
