{
  "name": "with-context",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.3",
    "prettier": "^2.6.2",
    "turbo": "^1.2.14"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=17.0.0"
  },
  "lint-staged": {
    "app/**/*.{js,ts,ts,tsx}": [
      "eslint --fix"
    ],
    "packages/ui-native/**/*.{js,ts,ts,tsx}": [
      "eslint --fix"
    ],
    "packages/ui-web/**/*.{js,ts,ts,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.2.1"
}
